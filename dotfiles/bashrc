#!/bin/bash

# Only run in interactive shells.
if [[ $- == *i* ]]; then
    if [[ $TERM == "alacritty" ]]; then
        export TERM=xterm-256color
    fi

    source "${HOME}"/dotfiles/aliases.bash
    source "${HOME}"/dotfiles/bash_hist.bash

    alias cds="cd ${SCRATCH}"
    alias cd1="cd ${HOME1}"
    alias cd2="cd ${HOME2}"

    source "${HOME}"/env/spackenv
fi
