#!/usr/bin/env bash

# TODO unify with zsh
[[ -d "${PYENV_ROOT}/bin" ]] && export PATH="${PYENV_ROOT}/bin:${PATH}"
if command -v pyenv >/dev/null 2>&1; then
    eval "$(pyenv init -)"
fi
if command -v pyenv-virtualenv-init 1>/dev/null 2>&1; then eval "$(pyenv virtualenv-init -)"; fi

# Commands that should be applied only for interactive shells.
[[ $- == *i* ]] || return

shopt -s checkwinsize
shopt -s extglob
shopt -s globstar
shopt -s checkjobs

source "${HOME}"/dotfiles/berquist.bash-theme
source "${HOME}"/dotfiles/aliases.bash
source "${HOME}"/dotfiles/history.bash
source "${HOME}"/dotfiles/interactive_exports.bash
source "${HOME}"/dotfiles/functions.bash

GPG_TTY="$(tty)"
export GPG_TTY
