#!/usr/bin/env zsh

if [ -n "${__SOURCED_ZPROFILE}" ]; then return; fi
echo "running zprofile"
export __SOURCED_ZPROFILE=1

if [[ "$TERM" != "" ]]; then
    stty -ixon
fi

hostname=$(hostname)

if [[ $hostname == "sodium" ]]; then
    [[ -f /usr/local/bin/brew ]] && eval "$(/usr/local/bin/brew shellenv)"
fi
