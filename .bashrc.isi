#!/usr/bin/env bash

[[ -f /etc/bashrc ]] && source /etc/bashrc

source ~/dotfiles/interactive_exports.bash
source ~/dotfiles/aliases.bash
source ~/dotfiles/bash_hist.bash
source ~/dotfiles/functions.bash

export GIT_AUTHOR_EMAIL='berquist@isi.edu'
export GIT_COMMITER_EMAIL='berquist@isi.edu'

export GAIA_HOME=/nas/gaia/users/berquist

alias gcd="cd ${GAIA_HOME}"
alias mongod_start="mongod -v --dbpath=${GAIA_HOME}/fireworks_mongodb_dir --logpath ${GAIA_HOME}/fireworks_mongodb.log --bind_ip_all --fork"
alias mongod_stop="mongod --dbpath=${GAIA_HOME}/fireworks_mongodb_dir --shutdown"

# export PATH=${HOME}/personal_scripts/isi:${PATH}

